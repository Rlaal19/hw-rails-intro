<!-- app/views/reviews/new.html.erb -->
<%= form_for(@review, url: reviews_path) do |form| %>
  <% if params[:movie_title].present? %>
    <%= form.hidden_field :movie_title, value: params[:movie_title] %>
  <% else %>
    <div class="form-group">
      <%= form.label :movie_title, "Movie Title" %>
      <%= form.text_field :movie_title, class: "form-control" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :rating, "Rating" %>
    <%= form.number_field :rating, class: "form-control", min: 1, max: 5 %>
  </div>
  <div class="form-group">
    <%= form.label :comment, "Comment" %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Submit Review", class: "btn btn-primary" %>
  </div>
<% end %>


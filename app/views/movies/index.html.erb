<% if current_user %>
  <div class="row">
    <div class="col-ms-1">
      <%= image_tag(current_user.avatar_url, style: "width: 30px; height: 30px;") %>
    </div>
    <div class="col-md-2">
        <p><%= current_user.email %></p>
    </div>
    <div class="col">
      <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete,class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
